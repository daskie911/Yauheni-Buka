<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Admin</title>
  </head>
  <body>
    <header>
      <h1>Admin</h1>
      <p>Welcome <%= login %></p>
      <form action="/logOut" method="post">
        <button type="submit">Log Out</button>
      </form>
    </header>
    <main>
      <% contacts.forEach(contact => { %>
      <form action="/admin/editContacts/<%= contact._id %>" method="post">
        <input
          type="text"
          name="phone"
          placeholder="Phone"
          value="<%= contact.phone %>"
        />
        <input
          type="email"
          name="email"
          placeholder="Email"
          value="<%= contact.email %>"
        />
        <button type="submit">Add Changes</button>
      </form>
      <% }); %>
    </main>
  </body>
</html>
